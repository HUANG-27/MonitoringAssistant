<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_audioDataTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="4dp"
        android:text="2020-12-12  20:30:40"
        android:textColor="@color/color_gray2"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/imageButton_audioDataUserIcon"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>

        <!--音频-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_audioDataMonitorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:text="周五阵亡"
                    android:textColor="@color/color_gray2"
                    android:textSize="14sp" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imageButton_playAudioData"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_audio_green_64"
                        android:padding="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300''"
                        android:paddingVertical="4dp"
                        android:textDirection="ltr"
                        android:textColor="@color/color_gray2"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="64dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_audioDataPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="4dp"
        android:text="北京市海淀去颐和园路5号 北京大学"
        android:textColor="@color/color_gray2"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>
